package employeedata;

/**
 *
 * @author Admin
 */

public class EmployeeData {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
       
        Employee rob=new Employee("Rob",1994,"64C-wallsstreet");
        Employee sam=new Employee("Sam",2000,"68D-wallsstreet");
        Employee john=new Employee("John",1999,"26B-wallsstreet");
        System.out.println("NAME\tYEAR OF JOINING\t\tADDRESS");
        System.out.println(rob.getname()+"\t"+rob.getyear()+"\t\t"+rob.getadd());
        System.out.println(sam.getname()+"\t"+sam.getyear()+"\t\t"+sam.getadd());
        System.out.println(john.getname()+"\t"+john.getyear()+"\t\t"+john.getadd());
    }
    
}

//another class in the same package:


package employeedata;

/**
 *
 * @author Admin
 */
public class Employee {
   String name;
   int year;
   String add;
   
    public Employee(String name, int year, String add ) {
        this.name = name;
        this.year = year;
        this.add = add;
     
    
    }

   
    
public String getname(){
        return name;}
        
     public int getyear(){
         return year;}
     
     public String getadd(){
         return add;
     }
     
    
}



